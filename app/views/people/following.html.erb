<div>
  <div class="row">
    <div class="col-xs-offset-4 col-sm-4 form-signin">
      <%= form_for :people, url: send_follow_request_url, method: :post do |f| %>
        <%= f.email_field :email, autofocus: true, placeholder: "Email address", class: 'form-control' %>
        <div class="actions">
          <%= f.submit "Send Request", class: "btn btn-lg btn-primary btn-block" %>
        </div>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-sm-offset-1" id="following">
      <% if @following.any? %>
        <h4>Following:</h4>

        <table class="table">
          <thead>
            <tr>
              <th> Email address </th>
            </tr>
          </thead>
          <tbody>

            <% if @following.any? %>
              <% @following.each do |user| %>
                <tr>
                  <td>
                    <% if user.locations.any? %>
                      <%= link_to user.email, location_path(user) %>
                    <% else %>
                      <%= user.email %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            <% end %>

          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
